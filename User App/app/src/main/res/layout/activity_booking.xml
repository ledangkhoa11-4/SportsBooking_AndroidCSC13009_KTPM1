<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    tools:context=".Booking">

    <TextView
        android:id="@+id/courtNameBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/lato"
        android:text="Sân Bóng Trí Hải"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button15" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="25dp"
        android:layout_height="20dp"

        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/courtNameBooking"
        app:layout_constraintTop_toBottomOf="@+id/courtNameBooking"
        app:srcCompat="@drawable/clock_icon"
        app:tint="#848383" />


    <TextView
        android:id="@+id/hourServiceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/lato_bold"
        android:maxLines="1"
        android:text="06:00 - 23:00"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
        android:id="@+id/sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:text="SPORT:"
        android:textColor="#858585"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button16" />

    <TextView
        android:id="@+id/sport3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:text="No:"
        android:textColor="#858585"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/sport"
        app:layout_constraintTop_toBottomOf="@+id/sport" />

    <TextView
        android:id="@+id/sport5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:text="DATE:"
        android:textColor="#858585"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/sport3"
        app:layout_constraintTop_toBottomOf="@+id/sport3" />

    <TextView
        android:id="@+id/sport6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:text="TIME"
        android:textColor="#858585"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/sport3"
        app:layout_constraintTop_toBottomOf="@+id/sport5" />

    <TextView
        android:id="@+id/sport9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lato"
        android:text="PAYMENT METHOD"
        android:textColor="#858585"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/sport7"
        app:layout_constraintTop_toBottomOf="@+id/sport7" />

    <TextView
        android:id="@+id/sport7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato"
        android:text="TOTAL PRICE:"
        android:textColor="#858585"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button18" />

    <TextView
        android:id="@+id/typeSport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/lato"
        android:text="FOOTBALL"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/sport"
        app:layout_constraintStart_toEndOf="@+id/sport"
        app:layout_constraintTop_toTopOf="@+id/sport" />

    <TextView
        android:id="@+id/priceBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/lato"
        android:text="0đ"
        android:textColor="#0016DA"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sport7"
        app:layout_constraintStart_toEndOf="@+id/sport7"
        app:layout_constraintTop_toTopOf="@+id/sport7" />

    <TextView
        android:id="@+id/yardNumChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato"
        android:text="Pick yard number"
        android:textColor="#0243FB"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/sport3"
        app:layout_constraintStart_toStartOf="@+id/typeSport"
        app:layout_constraintTop_toTopOf="@+id/sport3" />

    <TextView
        android:id="@+id/dateChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato"
        android:text="Pick Date"
        android:textColor="#0243FB"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/sport5"
        app:layout_constraintStart_toStartOf="@+id/yardNumChoose"
        app:layout_constraintTop_toTopOf="@+id/sport5" />

    <TextView
        android:id="@+id/timeChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato"
        android:text="Pick time"
        android:textColor="#0243FB"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/sport6"
        app:layout_constraintStart_toStartOf="@+id/dateChoose"
        app:layout_constraintTop_toTopOf="@+id/sport6" />

    <TextView
        android:id="@+id/courtLocationDetailBooking"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/lato_bold"
        android:maxLines="1"
        android:text="213/26 Nguyễn Thiện Thuật, P1, Q3, HCM"

        android:textColor="#0243FB"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/courtNameBooking"
        app:layout_constraintTop_toBottomOf="@+id/hourServiceTv" />

    <ImageButton
        android:id="@+id/backButtonFiltering"
        android:layout_width="47dp"
        android:layout_height="40dp"
        android:backgroundTint="#FFFEFE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:text="Confirm Booking"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/backButtonFiltering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backButtonFiltering"
        app:layout_constraintTop_toTopOf="@+id/backButtonFiltering" />

    <Button
        android:id="@+id/button15"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#DFDEDE"
        android:text="LOCATION"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button16"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#DFDEDE"
        android:text="BOOKING DETAIL"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courtLocationDetailBooking" />

    <Button
        android:id="@+id/button18"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#DFDEDE"
        android:text="PAYMENT"
        android:textAlignment="textStart"
        android:textColor="#000000"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/timeChoose"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/sport9"
        app:layout_constraintTop_toBottomOf="@+id/sport9">

        <RadioButton
            android:id="@+id/payByPaypal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Paypal" />


    </RadioGroup>

    <Button
        android:id="@+id/BookBtn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="231dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:text="Submit booking"
        android:textColor="#FF0000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:strokeColor="@color/red" />

</androidx.constraintlayout.widget.ConstraintLayout>