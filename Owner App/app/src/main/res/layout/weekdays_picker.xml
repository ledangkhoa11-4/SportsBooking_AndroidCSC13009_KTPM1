        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_bg"
        android:textOff="Tue"
        android:textOn="T" />

    <ToggleButton
        android:id="@+id/tW"
        style="@style/toggleButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_bg"
        android:textOff="Wed"
        android:textOn="W" />

    <ToggleButton
        android:id="@+id/tT"
        style="@style/toggleButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
