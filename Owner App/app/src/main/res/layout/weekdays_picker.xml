        android:id="@+id/tF"
        style="@style/toggleButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_bg"
        android:textOff="Fri"
        android:textOn="F" />

    <ToggleButton
        android:id="@+id/tS"
        style="@style/toggleButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_bg"
        android:textOff="Sat"
        android:textOn="S" />

    <ToggleButton
        android:id="@+id/tSu"
        style="@style/toggleButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_bg"
        android:textOff="Sun"
        android:textOn="Su" />
