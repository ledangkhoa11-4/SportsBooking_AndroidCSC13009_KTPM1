        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_bg"
        android:textOff="Mon"
        android:textOn="M" />

    <ToggleButton
        android:id="@+id/tTue"
        style="@style/toggleButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
